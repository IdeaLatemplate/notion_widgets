<body>

	<nav class="navMenu  border">
		<a id="Home" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-house"></i> Home</a>
		<a id="Recipes" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-utensils"></i></i> Recepies</a>
		<a id="Groceries" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-cart-shopping"></i></i> Groceries</a>
		<a id="Whishlist" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-heart"></i></i></i> Whishlist</a>
		<a id="Macros" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-magnifying-glass-chart"></i></i> Macros</a>

	</nav>


	<script>

		let direction = "horizontal";
		if (direction === "vertical") {
			document.head.insertAdjacentHTML("beforeend", `<style>.navMenu a {display: block; text-align:left; margin:7px} i{width:15px; margin-right:5px} .navMenu{margin:3px}</style>`)
		}


		function navigate(id) {

			if (id == 'home')
				window.open("https://home.com", '_blank').focus();
			else if (id == "Recipes")
				window.open("https://Recipes.com", '_blank').focus();
			else if (id == "Groceries")
				window.open("https://groceries.com", '_blank').focus();
			else if (id == "Whishlist")
				window.open("https://Whishlist.com", '_blank').focus();
			else if (id == "Macros")
				window.open("https://Macros.com", '_blank').focus();
		}
	</script>


